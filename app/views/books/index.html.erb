<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr></tr>
          <tr>Title</tr>
          <tr>Opinion</tr>
          <tr colspan="3"></tr>
        </thead>

        <tbody>

          <% @books.each do |book| %>

          <tr>
            <td>
              <!-- user image -->
              <%= image_tag @user.get_profile_image(100,100) %>
              <%= @user.name %>
            </td>
            <td>
              <%= book.title %>
            </td>
            <td>
              <%= book.opinion %>
            </td>
          </tr>
         <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>